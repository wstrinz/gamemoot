# 'rails' friendly per github page

"app/controllers":
  IrresponsibleModule:
    enabled: false
  NestedIterators:
    max_allowed_nesting: 2
  UnusedPrivateMethod:
    enabled: false
  InstanceVariableAssumption:
    enabled: false
"app/controllers/api":
  UncommunicativeModuleName:
    accept:
      - !ruby/regexp /V\d/
"app/helpers":
  IrresponsibleModule:
    enabled: false
  UtilityFunction:
    enabled: false

exclude_paths:
  - db
  - config
  - bin
